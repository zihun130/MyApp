<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#16171a"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/rb_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/rb_shop_pic_selector"
            android:gravity="center"
            android:text="商店"
            android:textColor="@drawable/rb_text_color_selector"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_mgz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/rb_mgz_pic_selector"
            android:gravity="center"
            android:text="杂志"
            android:textColor="@drawable/rb_text_color_selector"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_dazen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/rb_daren_pic_selector"
            android:gravity="center"
            android:text="达人"
            android:textColor="@drawable/rb_text_color_selector"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/rb_good_pic_selector"
            android:gravity="center"
            android:text="分享"
            android:textColor="@drawable/rb_text_color_selector"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_self"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/rb_self_pic_selector"
            android:gravity="center"
            android:text="个人"
            android:textColor="@drawable/rb_text_color_selector"
            android:textSize="15sp" />
    </RadioGroup>

</LinearLayout>
