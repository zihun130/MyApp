<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_mgz"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e9ecf0"
        android:orientation="horizontal">

        <RadioButton
            android:background="#e9ecf0"
            android:id="@+id/rb_classify"
            android:layout_width="0dp"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/icon_topic_category"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null" />

        <RadioButton
            android:background="#e9ecf0"
            android:id="@+id/rb_author"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/icon_topic_author"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null" />

    </RadioGroup>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e9ecf0"
        app:tabIndicatorColor="#d0d5db"
        app:tabSelectedTextColor="#4e4e4f"
        app:tabTextColor="#bbbdc0"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/ll_back"
        android:background="#15171a"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="杂志"
            android:textSize="20sp"
            android:textColor="#6b7072"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="5dp"
            android:src="@drawable/arrow_up"
            android:layout_width="15dp"
            android:layout_height="15dp" />

    </LinearLayout>

</LinearLayout>
